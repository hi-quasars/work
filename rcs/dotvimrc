set tabstop=4
set shiftwidth=4
set nu

" map select all and copy: ctrl+a
map <C-A> ggVGY
map! <C-A> <Esc>ggVGY
map <F12> gg=G

set tags=tags

" jump to the place where cursor is opened last time
autocmd BufReadPost * if line("'\"") && line("'\"") <= line("$") | exe "normal `\"" | endif

colorscheme molokai
